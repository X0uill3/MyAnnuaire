<UserControl x:Class="MyAnnuaireWPF.Views.Parametres"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyAnnuaireWPF.Views"
             xmlns:viewModels="clr-namespace:MyAnnuaireWPF.ViewModels"
             >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Titre" Grid.Row="0" Text="{Binding Titre}" Margin="0" FontWeight="Bold" />

        <Grid Grid.Row="1">

            <Label Content="Tester la connexion à l'API"></Label>
            <Button Content="Lancer le test" Click="TestAPI"></Button>
            
        </Grid>

    </Grid>
</UserControl>
